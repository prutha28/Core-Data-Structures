package heap;

public class Heap implements IHeap{

	int heapArray[] ;
	int heapSize ; 
	
	public Heap(){ 
		heapSize = 0 ;
	}
	
	public Heap(int arr[]){ 
		heapSize = heapArray.length ;
	}
	
	public int parent(int i) {
		return (i-1)/2;
	}

	public int left(int i) {
		return ( 2* i + 1 ) ;
	}

	public int right(int i) {
		return ( 2* i + 2 ) ;
	}

}
