package quick.sort;

public class QuickSort {

	public static void main(String[] args) {
		
		int[] arr = { 23,3, 7, 99 , 111, 10000, 6 } ;
		print( arr ) ;
		qsort( arr, 0 , arr.length - 1) ;
		print( arr ) ;
	}

	private static int[] qsort( int[] A, int p, int r ) {
		int q = partition( A, p, r ) ;// index of pivot
